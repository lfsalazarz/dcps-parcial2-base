<article class="">
    <div>
        <span>{{model.username}}</span> 
    </div>
    <div>
        <img src="{{model.profilePicture}}" alt="">
    </div>

    <div>
        <span>First Name: </span> {{model.firstName}}
    </div>
    <div>
        <span>Last Name: </span> {{model.lastName}}
    </div>
    <div>
        <span>Email: </span> {{model.email}}
    </div>
</article>
<h4>Posts:</h4>

{{#if model.posts.length}}

<table style="" id="t01">
    <tr>
        <th>Action</th>
        <th>Title</th>
        <th>Published date</th>
        <th>Content</th>
    </tr>    
    {{#each model.posts as |post|}}
        <tr>
            <td><button {{action "deletePost" post.id}}>Delete Post</button></td>

            <td>{{post.title}}</td>
            <td>{{post.publishedAt}}</td>
            <td>{{post.content}}</td>
        </tr>
    {{/each}}  
</table>

{{else}}
    <h3>This author don't have posts</h3>
{{/if}}

{{outlet}}